<div class="row mt-5">
	<div class="col-12 text-center">
			<h1>Pinstrest Clone</h1>
	</div>
</div>

<div class="row pt-2 pb-2">
	<div class="col-12 text-center">
		<% if user_signed_in? %>
		<button>
		<%= link_to 'New pin', new_pin_path %>
		</button>
		<% else %>
			<div>Hello guest Please <%= link_to 'log in', new_user_session_url %></div>
		<% end %>
	</div>
</div>





<div class="row border">
  <% @pins.each do |pin| %>
    <div class="col-4 border text-center pt-3 pb-3">
    	<div class="row">
    		<div class = "col-12 text-center">
      		<p><%= pin.url %></p>

      	</div>
      </div>

      <div class="row justify-content-center	">
      	<div class="col-2">
      		<p><%= link_to 'S', pin_path(pin) %></p>
    		</div>

    		<div class="col-2">
      		<p><%= link_to 'E', edit_pin_path(pin) %></p>
    		</div>

    		<div class="col-2">
      		<p><%= link_to 'D', pin_path(pin),
        	method: :delete,
        	data: { confirm: 'Are you sure?' } %></p>
      	</div>
    	</div>
    </div>
  <% end %>
</div>